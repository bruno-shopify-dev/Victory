<div class="hero-image section">
    <img 
        src="{{ section.settings.image | img_url: 'master' }}" 
        alt="Hero Image"
    >
</div>



<!-- Create a config block into Shopify -->
{% schema %}
{
    "name": "Hero Image",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        }
    ],
    "presets": [
        {
            "name": "Hero Image",
            "category": "Image"
        }
    ]
}
{% endschema %}
