        watch: {
          getItemCountCart(newValue) {
            if (newValue == 1) {
              this.$refs.item_count.innerHTML = "1 Item"
            } else if (newValue > 1) {
              this.$refs.item_count.innerHTML = `${newValue} Itens`
            } else {
