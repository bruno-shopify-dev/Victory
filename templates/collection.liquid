    <div style="flex: 10;">
      <h1>{{ collection.title }}</h1>
    </div>
    <div style="flex: 4;text-align: end;margin-right: 0.5rem;">
      <a href="#">
        Ver todos
      </a>
    </div>
  </div>
  <div class="collection-list">
    <div class="swiper">
      <div class="swiper-wrapper">
        {% render 'product-card' for collection.products as product %}
      </div>
