<script>
  var swiper = new Swiper(".collection-list .swiper", {
    slidesPerView: "auto",
    spaceBetween: 10,
    // cssMode: true,
    centeredSlides: true,
    autoplay: {
      delay: 5000,
      disableOnInteraction: false,
    },
    navigation: {
      nextEl: ".collection-list .swiper .swiper-button-next",
      prevEl: ".collection-list .swiper .swiper-button-prev",
    },
    breakpoints: {
      // when window width is >= 480px
      375: {
        spaceBetween: 15
      },
      // when window width is >= 640px
      425: {
        spaceBetween: 20
      }
    }
  });

